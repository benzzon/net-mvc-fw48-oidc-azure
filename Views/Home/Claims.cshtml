@using System.Security.Claims
@{
    var claims = (User.Identity as ClaimsIdentity)?.Claims ?? Enumerable.Empty<Claim>();
}

<div class="row">
    <div class="col-md-12">

        <h3>Claims associated with current User</h3>
        <p>This page displays all the claims associated with the current User. This is useful when debugging to see which claims are being populated from the ID Token.</p>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Claim
                    </th>
                    <th>
                        Value
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
